<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cbcbcb">


    <CheckBox
        android:id="@+id/child_list_item_crime_solved_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/child_list_item_crime_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Crime Date"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/child_list_item_crime_solved_check_box"
        android:layout_toEndOf="@+id/child_list_item_crime_solved_check_box"/>

</RelativeLayout>