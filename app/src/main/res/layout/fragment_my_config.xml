<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:leon="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.eeda123.wedding.MyConfigFragment">
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="10dp"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/headimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="朱小明"
                    android:textSize="16sp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10"
                    android:text="登录/注册"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="18sp"/>
            </LinearLayout>


            <com.leon.lib.settingview.LSettingItem
                android:id="@+id/item_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/history"
                leon:leftText="推送消息"/>

            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/download"
                leon:leftText="婚期"/>

            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/credit_card"
                leon:leftText="检测新版本"/>

            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/credit_card"
                leon:leftText="信息反馈"/>

            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/credit_card"
                leon:leftText="关于婚礼帮"/>
            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/credit_card"
                leon:leftText="业务联系"/>
            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/credit_card"
                leon:leftText="私隐政策"/>

            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                leon:leftIcon="@drawable/credit_card"
                leon:leftText="服务条款"/>
            <com.leon.lib.settingview.LSettingItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                leon:isShowUnderLine="false"
                leon:leftIcon="@drawable/logout"
                leon:leftText="退出登录"
                leon:rightStyle="iconHide" />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>